<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindMealOptionsActivity">

    <Button
        android:id="@+id/FindMealButton"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:onClick="onFindMealButton"
        android:text="@string/find_meal_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ViewRequestButton"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:onClick="onViewRequest"
        android:text="@string/view_request_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onMapButton"
        android:text="Map"
        app:layout_constraintBottom_toTopOf="@+id/ViewRequestButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FindMealButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
