<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myrequest_cardview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myrequests"
        android:layout_width="411dp"
        android:layout_height="217dp"
        android:background="@drawable/recycleview_find_meal_header"
        android:clickable="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/myrequests_time"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/quicksand"
            android:text="Time: "
            android:textColor="#000"
            android:textSize="20dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/myrequests_notes"
            android:layout_width="376dp"
            android:layout_height="31dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/quicksand"
            android:text="Notes:"
            android:textColor="#000"
            android:textSize="20dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/myrequests_status" />

        <TextView
            android:id="@+id/myrequests_status"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/quicksand"
            android:text="Request status: "
            android:textColor="#000"
            android:textSize="20dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/myrequests_location" />

        <TextView
            android:id="@+id/myrequests_location"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/quicksand"
            android:text="Location: "
            android:textColor="#000"
            android:textSize="20dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/myrequests_time" />

        <ImageButton
            android:id="@+id/myposts_deleteButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:src="@android:drawable/ic_menu_delete"
            card_view:layout_constraintStart_toEndOf="@+id/myrequests_location"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/myrequests_userNameto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="132dp"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/myrequests_time"
            android:layout_toRightOf="@+id/myrequests_time"
            android:text="To: Chloe"
            android:textColor="#000"
            android:textSize="20dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

