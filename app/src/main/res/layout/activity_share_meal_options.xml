<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareMealOptionsActivity"
    android:background="@drawable/share_meal_options_header_selector">

    <Button
        android:id="@+id/ViewPostsButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/share_meal_circle"
        android:drawableTop="@drawable/white_eye"
        android:fontFamily="@font/quicksand"
        android:onClick="onViewPost"
        android:paddingTop="40dp"
        android:paddingBottom="25dp"
        android:text="@string/share_meal_view_button"
        android:textStyle="bold"
        android:textColor="#fff"

        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358" />

    <Button
        android:id="@+id/MakePostsButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/share_meal_circle"
        android:drawableTop="@drawable/white_give"
        android:fontFamily="@font/quicksand"
        android:onClick="onMakeMealShare"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:text="@string/share_meal_make_post"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewPostsButton"
        app:layout_constraintVertical_bias="0.184" />
</androidx.constraintlayout.widget.ConstraintLayout>