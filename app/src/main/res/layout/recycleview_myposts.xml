<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="5dp"
    >

<!--    <RelativeLayout-->
<!--        android:id="@+id/myposts"-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="202dp"-->
<!--        android:background="#ECEFF1"-->
<!--        android:clickable="true"-->
<!--        android:padding="10dp">-->

        <TextView
            android:id="@+id/myposts_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Locations: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/myposts_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myposts_location"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:text="Start time: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/myposts_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="67dp"
            android:gravity="center"
            android:text="End Time: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/myposts_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="118dp"
            android:gravity="center"
            android:text="Notes:"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/myposts_requestCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"
            android:layout_marginBottom="65dp"
            android:text="Post #" />

        <ImageButton
            android:id="@+id/myposts_deleteButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/myposts_requestCount"
            android:layout_toRightOf="@+id/myposts_endTime"
            android:layout_marginLeft="210dp"
            android:src="@android:drawable/ic_menu_delete"/>


<!--    </RelativeLayout>-->
</androidx.cardview.widget.CardView>

