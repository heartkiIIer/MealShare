<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mealsharing.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ViewPostDetails"></activity>
        <activity android:name=".MyPostViewRequest" />
        <activity android:name=".MyPostRecycleViewAdapter" />
        <activity
            android:name=".ViewMyPostingsActivity"
            android:parentActivityName=".ShareMealOptionsActivity" />
        <activity
            android:name=".FindMealActivity"
            android:parentActivityName=".FindMealOptionsActivity" />
        <activity
            android:name=".ShareMealActivity"
            android:parentActivityName=".ShareMealOptionsActivity" />
        <activity
            android:name=".ShareMealOptionsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FindMealOptionsActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>